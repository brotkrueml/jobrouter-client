{
    "name": "brotkrueml/jobrouter-client",
    "description": "Rest client for the JobRouter digitisation platform",
    "type": "library",
    "keywords": [
        "jobrouter",
        "rest client"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "nyholm/psr7": "^1.2",
        "psr/http-client": "^1.0",
        "symfony/http-client": "^4.4 || ^5.0"
    },
    "require-dev": {
        "donatj/mock-webserver": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^8.4",
        "vimeo/psalm": "^3.6"
    },
    "suggest": {
        "ext-curl": "Improves the performance of the symfony/http-client component"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\JobRouterClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\JobRouterClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/bin/php-cs-fixer fix"
    }
}
